@using SearchEngine.Models;
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/Master.cshtml";
}

<main class="main-cont content mCustomScrollbar">
    <div class="page-wrap">
        <!--开始::内容-->
        <section class="page-hd">
            <header>
                <h2 class="title">管理员管理</h2>
            </header>
            <hr>
        </section>
        <div>
            <form method="post" action="/Admin/Index">
                <input type="text" name="search" placeholder="搜索条件..." class="form-control form-boxed" style="width:300px;">
                &nbsp;  <input type="submit" class="btn btn-primary" value="搜索" />
                <br />
            </form>
        </div>
        <div style="float:right">
            <a href="/Admin/Create" class="btn btn-primary">添加管理员</a>
        </div>
        <table class="table mb-15">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>电话</th>
                    <th>密码</th>
                    <th>添加时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<Admin> mlist = (List<Admin>)ViewData["List"];
                    for (int i = 0; i < mlist.Count; i++)
                    {
                        <tr class="cen">

                            <td>@Html.Raw(i + 1)</td>
                            <td>@mlist[i].Tel</td>
                            <td>@mlist[i].Pwd</td>
                            <td>@mlist[i].AddTime</td>
                            <td>
                                <a href="/Admin/Delete/@mlist[i].Id" title="删除">删除</a>
                            </td>
                        </tr>
                    }
                }
               
            </tbody>
        </table>
        <div>
            @Html.Raw(ViewData["PageBar"])
        </div>
        <!--开始::结束-->
    </div>
</main>
