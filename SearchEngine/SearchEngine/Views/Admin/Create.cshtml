@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Master.cshtml";
}
@section head{
    <script src="~/Content/Admin/javascript/validate.js"></script>
}

<main class="main-cont content mCustomScrollbar">
    <div class="page-wrap">
        <!--开始::内容-->
        <section class="page-hd">
            <header>
                <h2 class="title">添加管理员</h2>
                @*<p class="title-description">
                        两列式表单结构，一般针对产品详情，文章详情应用。
                    </p>*@
            </header>
            <hr>
        </section>
        <form id="add" method="post" action="/Admin/Create">
            <div class="form-group-col-2">
                <div class="form-label">手机号码：</div>
                <div class="form-cont">
                    <input type="tel" name="Tel" placeholder="手机号码..." class="form-control form-boxed" style="width:300px;">

                </div>
            </div>

            <div class="form-group-col-2">
                <div class="form-label">输入密码：</div>
                <div class="form-cont">
                    <input type="password" name="pwd" placeholder="输入密码..." class="form-control form-boxed" style="width:300px;">
                </div>
            </div>
            <div class="form-group-col-2">
                <div class="form-label">确认密码：</div>
                <div class="form-cont">
                    <input type="password" name="surepwd" placeholder="确认密码..." class="form-control form-boxed" style="width:300px;">
                </div>
            </div>
            <div class="form-group-col-2">
                <div class="form-label"></div>
                <div class="form-cont">
                    <a href="#" class="btn btn-primary" onclick="check()">提交表单</a>

                    @*<input type="reset" class="btn btn-disabled" value="禁止" />*@
                </div>
            </div>
        </form>
        <!--开始::结束-->
    </div>

</main>
